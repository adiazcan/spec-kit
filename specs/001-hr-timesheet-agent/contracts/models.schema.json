{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "HR Timesheet Agent Data Models",
  "description": "JSON Schema definitions for HR Timesheet Agent data entities",
  "definitions": {
    "Employee": {
      "type": "object",
      "description": "Authenticated employee entity",
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid",
          "description": "Unique employee identifier"
        },
        "userPrincipalName": {
          "type": "string",
          "format": "email",
          "description": "Microsoft Entra ID UPN"
        },
        "displayName": {
          "type": "string",
          "maxLength": 100,
          "description": "Full name for personalized responses"
        },
        "employeeNumber": {
          "type": "string",
          "maxLength": 20,
          "pattern": "^[A-Za-z0-9]+$",
          "description": "HR system employee number"
        },
        "department": {
          "type": ["string", "null"],
          "maxLength": 50,
          "description": "Department or cost center"
        },
        "timeZone": {
          "type": "string",
          "pattern": "^[A-Za-z_]+/[A-Za-z_]+$",
          "description": "IANA time zone identifier (e.g., America/New_York)",
          "examples": ["America/New_York", "Europe/London", "Asia/Tokyo"]
        },
        "locale": {
          "type": "string",
          "pattern": "^[a-z]{2}-[A-Z]{2}$",
          "description": "BCP 47 locale (e.g., en-US)",
          "examples": ["en-US", "es-ES", "fr-FR"]
        },
        "roles": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["Employee", "Manager", "Admin"]
          },
          "minItems": 1,
          "description": "Authorization roles"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "Account creation timestamp (ISO 8601 UTC)"
        },
        "lastActiveAt": {
          "type": "string",
          "format": "date-time",
          "description": "Last interaction timestamp (ISO 8601 UTC)"
        }
      },
      "required": [
        "id",
        "userPrincipalName",
        "displayName",
        "employeeNumber",
        "timeZone",
        "locale",
        "roles",
        "createdAt",
        "lastActiveAt"
      ],
      "additionalProperties": false
    },
    "TimesheetEntry": {
      "type": "object",
      "description": "Timesheet entry with immutable history",
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid",
          "description": "Unique entry identifier"
        },
        "employeeId": {
          "type": "string",
          "format": "uuid",
          "description": "Foreign key to Employee"
        },
        "date": {
          "type": "string",
          "format": "date",
          "description": "Date worked (YYYY-MM-DD, no time component)"
        },
        "hours": {
          "type": "number",
          "minimum": 0.25,
          "maximum": 24.0,
          "multipleOf": 0.25,
          "description": "Hours worked (15-minute increments)"
        },
        "projectCode": {
          "type": "string",
          "maxLength": 50,
          "pattern": "^[A-Za-z0-9-]+$",
          "description": "Project or task identifier"
        },
        "projectName": {
          "type": "string",
          "maxLength": 200,
          "description": "Human-readable project name"
        },
        "description": {
          "type": ["string", "null"],
          "maxLength": 500,
          "description": "Work performed description"
        },
        "startTime": {
          "type": ["string", "null"],
          "format": "date-time",
          "description": "Clock-in timestamp (ISO 8601 UTC, nullable)"
        },
        "endTime": {
          "type": ["string", "null"],
          "format": "date-time",
          "description": "Clock-out timestamp (ISO 8601 UTC, nullable)"
        },
        "entryType": {
          "type": "string",
          "enum": ["original", "correction"],
          "description": "Entry classification"
        },
        "originalEntryId": {
          "type": ["string", "null"],
          "format": "uuid",
          "description": "Reference to original entry (if correction)"
        },
        "correctionReason": {
          "type": ["string", "null"],
          "maxLength": 500,
          "description": "Explanation for correction (required if entryType=correction)"
        },
        "isReadOnly": {
          "type": "boolean",
          "description": "Submission lock flag (true after submission)"
        },
        "submittedAt": {
          "type": ["string", "null"],
          "format": "date-time",
          "description": "Submission timestamp (ISO 8601 UTC, null until submitted)"
        },
        "submittedBy": {
          "type": ["string", "null"],
          "format": "uuid",
          "description": "Employee who submitted (usually same as employeeId)"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "Record creation timestamp (ISO 8601 UTC)"
        },
        "modifiedAt": {
          "type": "string",
          "format": "date-time",
          "description": "Last modification timestamp (ISO 8601 UTC)"
        }
      },
      "required": [
        "id",
        "employeeId",
        "date",
        "hours",
        "projectCode",
        "projectName",
        "entryType",
        "isReadOnly",
        "createdAt",
        "modifiedAt"
      ],
      "additionalProperties": false,
      "if": {
        "properties": {
          "entryType": {
            "const": "correction"
          }
        }
      },
      "then": {
        "required": ["originalEntryId", "correctionReason"]
      }
    },
    "ClockEvent": {
      "type": "object",
      "description": "Clock in/out event for attendance tracking",
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid",
          "description": "Unique event identifier"
        },
        "employeeId": {
          "type": "string",
          "format": "uuid",
          "description": "Foreign key to Employee"
        },
        "eventType": {
          "type": "string",
          "enum": ["clock_in", "clock_out"],
          "description": "Clock event type"
        },
        "timestamp": {
          "type": "string",
          "format": "date-time",
          "description": "Event occurrence time (ISO 8601 UTC)"
        },
        "localTimestamp": {
          "type": "string",
          "format": "date-time",
          "description": "Timestamp in employee's time zone (ISO 8601 with offset)"
        },
        "date": {
          "type": "string",
          "format": "date",
          "description": "Date component for daily queries (YYYY-MM-DD)"
        },
        "location": {
          "type": ["string", "null"],
          "maxLength": 100,
          "description": "Optional geolocation (e.g., 'Office', 'Remote')"
        },
        "deviceInfo": {
          "type": ["string", "null"],
          "maxLength": 200,
          "description": "Device identifier"
        },
        "correctedFrom": {
          "type": ["string", "null"],
          "format": "date-time",
          "description": "Original timestamp (if corrected)"
        },
        "correctionReason": {
          "type": ["string", "null"],
          "maxLength": 500,
          "description": "Explanation for correction"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "Record creation timestamp (ISO 8601 UTC)"
        },
        "modifiedAt": {
          "type": "string",
          "format": "date-time",
          "description": "Last modification timestamp (ISO 8601 UTC)"
        }
      },
      "required": [
        "id",
        "employeeId",
        "eventType",
        "timestamp",
        "localTimestamp",
        "date",
        "createdAt",
        "modifiedAt"
      ],
      "additionalProperties": false
    },
    "ConversationThread": {
      "type": "object",
      "description": "Multi-turn conversation session",
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid",
          "description": "Unique thread identifier"
        },
        "employeeId": {
          "type": "string",
          "format": "uuid",
          "description": "Foreign key to Employee"
        },
        "startedAt": {
          "type": "string",
          "format": "date-time",
          "description": "Thread creation timestamp (ISO 8601 UTC)"
        },
        "lastMessageAt": {
          "type": "string",
          "format": "date-time",
          "description": "Most recent message timestamp (ISO 8601 UTC)"
        },
        "status": {
          "type": "string",
          "enum": ["active", "completed", "abandoned"],
          "description": "Thread lifecycle status"
        },
        "context": {
          "$ref": "#/definitions/ConversationContext"
        },
        "messageCount": {
          "type": "integer",
          "minimum": 0,
          "description": "Total messages in thread"
        },
        "metadata": {
          "type": ["object", "null"],
          "description": "Additional properties (flexible schema)"
        }
      },
      "required": [
        "id",
        "employeeId",
        "startedAt",
        "lastMessageAt",
        "status",
        "context",
        "messageCount"
      ],
      "additionalProperties": false
    },
    "ConversationMessage": {
      "type": "object",
      "description": "Single message within a conversation thread",
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid",
          "description": "Unique message identifier"
        },
        "threadId": {
          "type": "string",
          "format": "uuid",
          "description": "Foreign key to ConversationThread"
        },
        "role": {
          "type": "string",
          "enum": ["user", "assistant", "system"],
          "description": "Message sender role"
        },
        "content": {
          "type": "string",
          "maxLength": 1000,
          "description": "Message text content (max 1000 chars per Edge Cases)"
        },
        "timestamp": {
          "type": "string",
          "format": "date-time",
          "description": "Message creation timestamp (ISO 8601 UTC)"
        },
        "toolCalls": {
          "type": ["array", "null"],
          "items": {
            "$ref": "#/definitions/ToolCall"
          },
          "description": "Functions invoked by agent (assistant messages only)"
        },
        "metadata": {
          "type": ["object", "null"],
          "description": "Additional properties (intent, confidence, etc.)"
        }
      },
      "required": [
        "id",
        "threadId",
        "role",
        "content",
        "timestamp"
      ],
      "additionalProperties": false
    },
    "ConversationContext": {
      "type": "object",
      "description": "Current conversation state for the agent",
      "properties": {
        "currentRequest": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": [
                "view",
                "submit",
                "clock_in",
                "clock_out",
                "correction",
                "summary"
              ],
              "description": "Request type"
            },
            "intent": {
              "type": "string",
              "description": "Parsed user intent"
            },
            "confidence": {
              "type": "number",
              "minimum": 0.0,
              "maximum": 1.0,
              "description": "Intent confidence score"
            }
          },
          "required": ["type", "intent", "confidence"]
        },
        "dateContext": {
          "type": "object",
          "properties": {
            "referenceDate": {
              "type": "string",
              "format": "date",
              "description": "Today, yesterday, or specific date"
            },
            "periodStart": {
              "type": ["string", "null"],
              "format": "date",
              "description": "For weekly/monthly queries"
            },
            "periodEnd": {
              "type": ["string", "null"],
              "format": "date",
              "description": "For weekly/monthly queries"
            }
          },
          "required": ["referenceDate"]
        },
        "parsedEntities": {
          "type": "object",
          "properties": {
            "hours": {
              "type": ["number", "null"],
              "minimum": 0.25,
              "maximum": 24.0
            },
            "projectCode": {
              "type": ["string", "null"]
            },
            "projectName": {
              "type": ["string", "null"]
            },
            "description": {
              "type": ["string", "null"]
            }
          }
        },
        "clarificationState": {
          "type": "object",
          "properties": {
            "isAwaiting": {
              "type": "boolean",
              "description": "Is agent waiting for clarification?"
            },
            "question": {
              "type": ["string", "null"],
              "description": "Clarification question asked"
            },
            "attemptCount": {
              "type": "integer",
              "minimum": 0,
              "maximum": 2,
              "description": "Number of clarifications (max 2 per FR-054)"
            },
            "topic": {
              "type": ["string", "null"],
              "description": "What needs clarification"
            }
          },
          "required": ["isAwaiting", "attemptCount"]
        },
        "pendingAction": {
          "type": "object",
          "properties": {
            "actionType": {
              "type": ["string", "null"],
              "description": "E.g., submit_timesheet, clock_out"
            },
            "requiresConfirmation": {
              "type": "boolean"
            },
            "confirmationPrompt": {
              "type": ["string", "null"]
            },
            "data": {
              "type": ["object", "null"],
              "description": "Action payload"
            }
          },
          "required": ["requiresConfirmation"]
        },
        "userPreferences": {
          "type": "object",
          "properties": {
            "defaultProjectCode": {
              "type": ["string", "null"]
            },
            "preferredHoursFormat": {
              "type": "string",
              "enum": ["decimal", "hours_minutes"],
              "default": "decimal"
            },
            "notificationsEnabled": {
              "type": "boolean",
              "default": true
            }
          },
          "required": ["preferredHoursFormat", "notificationsEnabled"]
        }
      },
      "required": [
        "currentRequest",
        "dateContext",
        "parsedEntities",
        "clarificationState",
        "pendingAction",
        "userPreferences"
      ],
      "additionalProperties": false
    },
    "ToolCall": {
      "type": "object",
      "description": "Function invocation by agent",
      "properties": {
        "id": {
          "type": "string",
          "description": "Tool invocation ID"
        },
        "name": {
          "type": "string",
          "description": "Function name (e.g., submit_timesheet)"
        },
        "arguments": {
          "type": "object",
          "description": "Input parameters"
        },
        "result": {
          "type": ["object", "null"],
          "description": "Function return value"
        },
        "status": {
          "type": "string",
          "enum": ["pending", "success", "error"],
          "description": "Execution status"
        },
        "error": {
          "type": ["string", "null"],
          "description": "Error message if status=error"
        }
      },
      "required": ["id", "name", "arguments", "status"],
      "additionalProperties": false
    },
    "AuditLog": {
      "type": "object",
      "description": "Immutable audit trail entry",
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid",
          "description": "Unique log entry identifier"
        },
        "timestamp": {
          "type": "string",
          "format": "date-time",
          "description": "Event occurrence timestamp (ISO 8601 UTC)"
        },
        "employeeId": {
          "type": "string",
          "format": "uuid",
          "description": "Employee who performed action"
        },
        "operationType": {
          "type": "string",
          "enum": [
            "view",
            "submit",
            "clock_in",
            "clock_out",
            "correct",
            "auth_login",
            "auth_logout",
            "auth_failed"
          ],
          "description": "Type of operation"
        },
        "resourceType": {
          "type": "string",
          "enum": [
            "timesheet_entry",
            "clock_event",
            "conversation",
            "auth"
          ],
          "description": "Resource affected"
        },
        "resourceId": {
          "type": ["string", "null"],
          "format": "uuid",
          "description": "Specific resource ID (foreign key)"
        },
        "action": {
          "type": "string",
          "maxLength": 100,
          "description": "Action performed (e.g., submitted_timesheet)"
        },
        "outcome": {
          "type": "string",
          "enum": ["success", "failure", "partial"],
          "description": "Operation result"
        },
        "details": {
          "type": "object",
          "description": "Operation details (before/after values, error details)"
        },
        "ipAddress": {
          "type": ["string", "null"],
          "pattern": "^(?:[0-9]{1,3}\\.){3}[0-9]{1,3}$|^(?:[A-F0-9]{1,4}:){7}[A-F0-9]{1,4}$",
          "description": "Client IP address (IPv4 or IPv6)"
        },
        "userAgent": {
          "type": ["string", "null"],
          "maxLength": 500,
          "description": "Client user agent"
        },
        "correlationId": {
          "type": "string",
          "format": "uuid",
          "description": "Trace correlation ID"
        }
      },
      "required": [
        "id",
        "timestamp",
        "employeeId",
        "operationType",
        "resourceType",
        "action",
        "outcome",
        "details",
        "correlationId"
      ],
      "additionalProperties": false
    },
    "Project": {
      "type": "object",
      "description": "Valid project code for timesheet entries (reference data)",
      "properties": {
        "code": {
          "type": "string",
          "maxLength": 50,
          "pattern": "^[A-Za-z0-9-]+$",
          "description": "Unique project code"
        },
        "name": {
          "type": "string",
          "maxLength": 200,
          "description": "Display name"
        },
        "description": {
          "type": ["string", "null"],
          "maxLength": 500,
          "description": "Project details"
        },
        "isActive": {
          "type": "boolean",
          "description": "Can accept new entries",
          "default": true
        },
        "startDate": {
          "type": ["string", "null"],
          "format": "date",
          "description": "Project start date"
        },
        "endDate": {
          "type": ["string", "null"],
          "format": "date",
          "description": "Project end date"
        }
      },
      "required": ["code", "name", "isActive"],
      "additionalProperties": false
    }
  }
}
